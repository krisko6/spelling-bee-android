<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->

    <!--
         NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it.
    -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <CheckBoxPreference android:key="askTTS_checkbox" android:title="@string/aTTS" android:summary="@string/pref_summary_tts" android:defaultValue="true"/>
    <CheckBoxPreference android:key="askRandomize_checkbox" android:summary="Randomize words when spelling" android:defaultValue="false" android:title="Randomize List"/>
    <CheckBoxPreference android:key="askVibrate" android:summary="Vibrate if word is incorrect" android:defaultValue="true" android:title="Vibration"/>
    <CheckBoxPreference android:key="ask_tts" android:summary="Use Text to Speech" android:defaultValue="true" android:title="Use Text to Speech"/>
    <ListPreference android:key="quickListLength" android:title="QuickListLength" android:summary="The length of a quick list." android:entryValues="@array/quickListPrefValues" android:entries="@array/quickListPref" android:defaultValue="10"/>

</PreferenceScreen>
